{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
