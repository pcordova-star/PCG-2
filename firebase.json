{
  "functions": [
    {
      "codebase": "default",
      "source": "src/functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": [
          "https://pcgoperacion.com",
          "https://www.pcgoperacion.com",
          "http://localhost:3000",
          "https://6000-firebase-studio-*.cluster-*.dev"
        ],
        "method": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "OPTIONS"
        ],
        "responseHeader": [
          "Content-Type",
          "Authorization",
          "x-goog-meta-*"
        ],
        "maxAgeSeconds": 3600
      }
    ]
  }
}
