
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "handlebars"],
    "strict": true,
    "esModuleInterop": true,

    "rootDir": "src",
    "outDir": "lib",

    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
